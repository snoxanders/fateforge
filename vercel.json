{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/app.ts",
      "use": "@vercel/node"
    },
    {
      "src": "backend/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/app.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/frontend/$1"
    }
  ]
}

