generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id        String   @id @default(uuid())
  userId    String?  
  name      String
  level     Int
  experience Int      @default(0)
  
  raceId    String   
  raceName  String
  classId   String   
  className String
  subclassId String? 
  subclassName String?
  
  hp              String // JSON { max, current, temp, hitDice, etc }
  armorClass      String // JSON { value, description }
  proficiencyBonus Int
  initiative      Int
  speed           Int
  passivePerception Int @default(10)

  attributes      String // JSON { STR, DEX... }
  skills          String // JSON
  proficiencies   String // JSON
  equipment       String // JSON
  wallet          String // JSON
  spells          String // JSON
  
  background      String // JSON
  personality     String // JSON
  bio             String // JSON

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
