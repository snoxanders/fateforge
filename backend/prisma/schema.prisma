generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id        String   @id @default(uuid())
  userId    String?  
  name      String
  level     Int
  
  raceId    String   
  raceName  String
  classId   String   
  className String
  subclassId String? 
  subclassName String?
  
  hp              Int
  armorClass      Int
  proficiencyBonus Int
  initiative      Int
  speed           Int

  stats           String 
  modifiers       String 
  skills          String 
  equipment       String 
  spells          String 
  
  background      String 
  personality     String 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
